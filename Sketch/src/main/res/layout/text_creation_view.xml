<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:padding="4dp"
    android:background="#cfcfcf"
    android:layout_gravity="right">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_creation_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:hint="My Text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:id="@+id/text_creation_btn_insert"
        android:layout_below="@+id/text_creation_spinner"
        android:layout_alignRight="@+id/text_creation_text"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/text_creation_editText"
        android:hint="Text Size"
        android:text="12"
        android:layout_toRightOf="@+id/textView"
        android:layout_below="@+id/text_creation_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Text Size"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/black"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignBottom="@+id/text_creation_editText"
        android:gravity="center"
        android:layout_alignTop="@+id/text_creation_editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Font"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_toLeftOf="@+id/text_creation_editText"
        android:layout_alignBottom="@+id/text_creation_spinner"
        android:gravity="center" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_creation_spinner"
        android:layout_below="@+id/text_creation_editText"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignRight="@+id/text_creation_text" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bold"
        android:id="@+id/text_creation_bold"
        android:layout_alignTop="@+id/text_creation_editText"
        android:layout_toRightOf="@+id/text_creation_editText"
        android:checked="false"
        android:layout_alignBottom="@+id/text_creation_editText"
        android:textColor="@android:color/black" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Italic"
        android:id="@+id/text_creation_italic"
        android:layout_toRightOf="@+id/text_creation_bold"
        android:layout_alignTop="@+id/text_creation_bold"
        android:layout_alignBottom="@+id/text_creation_bold"
        android:checked="false"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/black" />
</RelativeLayout>